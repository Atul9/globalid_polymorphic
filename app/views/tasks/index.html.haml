.col-md-6
  %table.table.table-bordered
    %th Name
    %th Client Type
    %th Actions
    - @tasks.each do |f|
      %tr
        %td= f.name
        %td= f.client_type
        %td
          = link_to "Edit", edit_task_path(f), class: 'btn btn-primary'
          = link_to 'Delete', task_path(f), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure?"}
        -#, data: {'Do you want to delete task?'}
  = link_to " New Task", new_task_path, class: 'btn btn-primary glyphicon glyphicon-plus'
  = link_to ' Home', root_path, class: 'btn btn-primary glyphicon glyphicon-home'
